# Configuración para el FRONTEND Portfolio
# Redirigir HTTP a HTTPS y dominio raíz a www
server {
    listen 80;
    server_name arielgrillo.es;
    return 301 https://www.arielgrillo.es$request_uri;
}

server {
    listen 80;
    server_name www.arielgrillo.es;
    return 301 https://www.arielgrillo.es$request_uri;
}

# SSL: redirigir arielgrillo.es a www.arielgrillo.es
server {
    listen 443 ssl http2;
    server_name arielgrillo.es;

    ssl_certificate /etc/letsencrypt/live/arielgrillo.es/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/arielgrillo.es/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    return 301 https://www.arielgrillo.es$request_uri;
}

# SSL: configuración principal del portfolio
server {
    listen 443 ssl http2;
    server_name www.arielgrillo.es;

    ssl_certificate /etc/letsencrypt/live/arielgrillo.es/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/arielgrillo.es/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Optimizaciones de seguridad y rendimiento
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Archivos estáticos con cache
    root /var/www/portfolio/frontend/;
    index index.html index.htm;

    # SPA routing: redirigir todas las rutas a index.html
    location / {
        try_files $uri /index.html;
    }

    # Cache para archivos estáticos
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # No cachear HTML
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }
}
