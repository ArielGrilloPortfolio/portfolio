# Configuraci칩n para el FRONTEND Portfolio
# Redirigir arielgrillo.es a www.arielgrillo.es
server {
    listen 80;
    server_name arielgrillo.es;
    return 301 http://www.arielgrillo.es$request_uri;
}

# Configuraci칩n principal del portfolio
server {
    listen 80;
    server_name www.arielgrillo.es;
    
    # Optimizaciones de seguridad y rendimiento
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # Archivos est치ticos con cache
    root /var/www/portfolio-frontend/;
    index index.html index.htm;
    
    # SPA routing: redirigir todas las rutas a index.html
    location / {
        try_files $uri /index.html;
    }
    
    # Cache para archivos est치ticos
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # No cachear HTML
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }
}
