# Configuración para el FRONTEND
server {
    listen 80;
    server_name www.goaltracker.es;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name www.goaltracker.es;
    
    ssl_certificate /etc/letsencrypt/live/www.goaltracker.es/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.goaltracker.es/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    root /var/www/html/GoalTracker/;
    index index.html index.htm;
    
    location / {
        try_files $uri /index.html;
    }
}

# Configuración para el BACKEND API
server {
    listen 80;
    server_name api.goaltracker.es;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name api.goaltracker.es;
    
    ssl_certificate /etc/letsencrypt/live/api.goaltracker.es/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.goaltracker.es/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    location / {
        # Manejar preflight OPTIONS requests
        # if ($request_method = 'OPTIONS') {
